---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/2025/05/Footer.astro";
import Header from "@/components/2025/05/Header.astro";
import Menu from "@/components/2025/05/Menu.astro";
import logo from "@/assets/2025/05/logo.webp";
---

<Layout
  title="スピーカーメッセージ - 2025 第56回JBBF全国青年フェローシップキャンプ"
  favicon={logo.src}
>
  <Header />

  <main class="main">
    <section>
      <h2 class="h2">
        <div class="en">Speaker Introduction</div>
        <div class="ja">講師紹介</div>
      </h2>
    </section>
  </main>

  <Footer />
  <Menu />
</Layout>

<style>
  .main {
    max-width: 600px;
    margin: auto;
    padding: 2em;
  }

  .h2 {
    color: var(--color-primary);
    font-size: 125%;
    font-style: italic;
    text-align: center;
  }

  .en {
    font-family: var(--font-serif);
  }
</style>

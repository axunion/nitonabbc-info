---
import Layout from "@/layouts/Layout.astro";
import Loading from "@/components/shared/Loading.astro";
import logo from "@/assets/2025/05/logo.webp";
import Footer from "@/components/2025/05/Footer.astro";
import H2 from "@/components/2025/05/H2.astro";
import Header from "@/components/2025/05/Header.astro";
import Menu from "@/components/2025/05/Menu.astro";
import Note from "@/components/2025/05/Note.astro";
---

<Layout
  title="Share Your Photo - 2025 第56回JBBF全国青年フェローシップキャンプ"
  favicon={logo.src}
>
  <Header />

  <main class="main bubble">
    <H2>
      <span slot="en">Share Your Photo</span>
      <span slot="ja">写真を共有</span>
    </H2>

    <section class="section">
      <form
        class="form"
        x-data="{ submitted: false }"
        @submit="submitted = true"
        @submitted="submitted = false"
      >
        <p>
          キャンプの思い出の写真をご投稿いただき、みなさまと心温まるひとときを分かち合いましょう。
        </p>

        <Note>
          このサイトは教会関係者のみに共有されますが、個人を特定できる情報などは写り込まないよう、ご注意をお願いいたします。
        </Note>

        <label class="label-text">
          <input type="text" class="input-text" placeholder="教会名" required />
        </label>

        <label class="label-file">
          <div class="notice-file">
            アップロードしたい画像を選択してください。画像は1度に10枚まで選択できます。
          </div>

          <input
            type="file"
            class="input-file"
            accept="image/jpeg,image/png"
            multiple
            required
          />
        </label>

        <button type="submit" class="upload-button" :disabled="submitted">
          Upload
        </button>

        <div x-show="submitted" style="display: none;">
          <Loading />
        </div>
      </form>
    </section>
  </main>

  <Footer />
  <Menu />
</Layout>

<style>
  body {
    background: var(--color-text);
    color: var(--color-background);
  }

  .main {
    overflow: hidden;
    position: relative;
  }

  .section {
    margin: auto;
    max-width: 400px;
    padding: 0 1.5em;
  }

  .label-text {
    background: var(--color-background);
    color: var(--color-text);
    border-radius: 4px;
    display: block;
    margin: 2em auto 1em;
    padding: 1em;
  }

  .input-text {
    width: 100%;
  }

  .label-file {
    border: currentColor solid 1px;
    border-radius: 4px;
    cursor: pointer;
    display: block;
    margin: 1em auto;
    padding: 1em;
  }

  .notice-file {
    font-size: 85%;
    margin: 0 0 1.5em;
  }

  .upload-button {
    background: inherit;
    border: currentColor solid 1px;
    border-radius: 3em;
    color: inherit;
    cursor: pointer;
    display: block;
    font-size: 125%;
    margin: 2em auto;
    padding: 1em 2em;
  }

  .upload-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

<script src="../../../../scripts/bubble.ts"></script>
<script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
<script>
  import { uploadImages } from "@/scripts/uploadImages";

  const $ = (selector: string) => document.querySelector(selector);
  const form = $(".form") as HTMLFormElement;
  const inputFile = $(".input-file") as HTMLInputElement;
  const inputText = $(".input-text") as HTMLInputElement;
  const MAX_FILES = 2;

  inputFile.addEventListener("change", () => {
    if (inputFile.files && inputFile.files.length > MAX_FILES) {
      alert(`画像は${MAX_FILES}枚まで選択できます。`);
      inputFile.value = "";
    }
  });

  form.addEventListener("submit", async (event) => {
    event.preventDefault();

    if (!inputFile.files || inputFile.files.length === 0) {
      alert("画像を選択してください。");
      return;
    }

    const files = Array.from(inputFile.files);
    const name = inputText.value
      .trim()
      .replace(/[<>:"/\\|?*\x00-\x1F]/g, "")
      .replace(/^\.+|\.+$/g, "");
    const path = `youth-fellowship-camp-2025/photo-gallery/${name}/`;

    try {
      const resp = await uploadImages({ images: files, path });

      if (resp.status === "success") {
        alert("アップロードしました");
      } else {
        alert("アップロードに失敗しました\n恐れ入りますが、再度お試しください");
      }
    } catch (err) {
      alert("アップロードに失敗しました\n恐れ入りますが、再度お試しください");
    }

    setTimeout(() => {
      form.dispatchEvent(new CustomEvent("submitted"));
    }, 100);
  });
</script>

---
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import BlockLink from "@/components/shared/BlockLink.astro";
import logo from "@/assets/2025/05/logo.webp";
import lakeYamanaka from "@/assets/2025/05/lake-yamanaka.webp";

const linkTags = [
  {
    rel: "preconnect",
    href: "https://fonts.googleapis.com",
  },
  {
    rel: "preconnect",
    href: "https://fonts.gstatic.com",
    crossorigin: "",
  },
  {
    rel: "stylesheet",
    href: "https://fonts.googleapis.com/css2?family=Yuji+Syuku&display=swap&text=テーマ『起きよ！輝け』イザヤ60:1.25MON7WED",
  },
];
---

<Layout
  title="2025 第56回JBBF全国青年フェローシップキャンプ"
  favicon={logo.src}
  linkTags={linkTags}
>
  <header class="block">
    <h1 class="h1">
      <small>2025 第56回</small><br />
      JBBF全国青年フェローシップキャンプ
    </h1>
  </header>

  <main class="main">
    <section class="block theme">
      <div>
        <h2 class="theme-head">テーマ</h2>
        <p class="theme-text">『起きよ！輝け！』</p>
        <div class="theme-verse">イザヤ 60:1</div>
      </div>
    </section>

    <section class="image">
      <Image src={lakeYamanaka} alt="" class="img" />

      <div class="date">
        <div>2025.5.5<span class="week">MON</span></div>
        <div>
          <svg width="6" height="40" class="svg">
            <line
              x1="3"
              y1="0"
              x2="3"
              y2="40"
              stroke="currentColor"
              stroke-width="1"></line>
            <polygon points="0,35 6,35 3,40" fill="currentColor"></polygon>
          </svg>
        </div>
        <div>2025.5.7<span class="week">WED</span></div>
      </div>
    </section>

    <section class="video-container">
      <video controls class="video">
        <source src="/promotional.mp4" type="video/mp4" />
      </video>
    </section>

    <section>
      <ul class="link-list">
        <li class="link-item">
          <BlockLink href="/2025/05/overview/">
            <div class="en">Event Overview</div>
            <div class="ja">概要</div>
          </BlockLink>
        </li>

        <li class="link-item">
          <BlockLink href="/2025/05/speaker/">
            <div class="en">Speaker Introduction</div>
            <div class="ja">講師紹介</div>
          </BlockLink>
        </li>

        <li class="link-item">
          <BlockLink href="/2025/05/venue/">
            <div class="en">Venue Information</div>
            <div class="ja">施設紹介</div>
          </BlockLink>
        </li>

        <li class="link-item">
          <BlockLink href="/2025/05/access/">
            <div class="en">Access</div>
            <div class="ja">アクセス</div>
          </BlockLink>
        </li>
      </ul>
    </section>
  </main>

  <footer class="footer">
    <small>
      主催：仁戸名聖書バプテスト教会・幕張聖書バプテスト教会<br />
      協力：市原聖書バプテスト教会
    </small>
  </footer>
</Layout>

<style>
  body {
    background: black;
    transition: background-color 1s;
  }

  body.light {
    background: white;
    transition: background-color 2s linear;
  }

  .block {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
  }

  .h1 {
    color: gray;
    font-size: 2vw;
    margin: 0;
  }

  .theme {
    color: black;
    font-family: "Yuji Syuku", serif;
    font-size: 3vw;
    min-height: 50vh;
    padding: 0 0 40vh;
    text-shadow: 0 0 40px white;
  }

  .theme-head {
    font-size: 50%;
    font-weight: normal;
    margin: 0;
  }

  .theme-text {
    margin: 8px 0;
  }

  .theme-verse {
    font-size: 50%;
    text-align: right;
  }

  .image {
    position: relative;
  }

  .img {
    height: 100%;
    object-fit: cover;
    width: 100%;
  }

  .date {
    align-items: center;
    background: #00000080;
    background: linear-gradient(#000000cc, #00000033);
    color: white;
    display: flex;
    flex-direction: column;
    font-family: "Yuji Syuku", serif;
    font-size: 4vw;
    gap: 1em;
    inset: 0;
    justify-content: center;
    line-height: 1;
    position: absolute;
  }

  .week {
    font-size: 40%;
    margin: 0 0 0 0.5em;
  }

  .svg {
    vertical-align: top;
  }

  .video-container {
    margin: 10vh auto;
    max-width: 600px;
    padding: 1.5em;
  }

  .video {
    width: 100%;
  }

  .link-list {
    font-size: 2vw;
    list-style: none;
    margin: 10vh auto;
    padding: 1.5em;
    max-width: 600px;
  }

  .link-item {
    color: var(--color-primary);
    margin: 1em 0;
  }

  .link-item:nth-child(n + 3) {
    color: var(--color-accent);
  }

  .en {
    font-family: var(--font-serif);
    font-size: 120%;
  }

  .ja {
    letter-spacing: 0.05em;
  }

  .footer {
    font-size: 90%;
    margin: 25vh 1em 10vh;
    text-align: center;
  }

  @media (max-width: 768px) {
    .h1 {
      font-size: 18px;
    }

    .theme {
      font-size: 32px;
    }

    .image {
      height: 100vh;
    }

    .date {
      font-size: 40px;
    }

    .link-list {
      font-size: 1rem;
      max-width: 400px;
    }
  }
</style>

<script>
  const scrollTarget = document.querySelector(".main");
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && entry.target instanceof HTMLElement) {
          document.body.classList.add("light");
        } else {
          document.body.classList.remove("light");
        }
      });
    },
    { rootMargin: "0px 0px -50%" },
  );

  if (scrollTarget) {
    observer.observe(scrollTarget);
  }
</script>

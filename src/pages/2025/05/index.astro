---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Layout from "@/layouts/Layout.astro";
import BlockLink from "@/components/shared/BlockLink.astro";
import logo from "@/assets/2025/05/logo.webp";
import lakeYamanaka from "@/assets/2025/05/lake-yamanaka.webp";

const linkTags = [
  {
    rel: "preconnect",
    href: "https://fonts.googleapis.com",
  },
  {
    rel: "preconnect",
    href: "https://fonts.gstatic.com",
    crossorigin: "",
  },
  {
    rel: "stylesheet",
    href: "https://fonts.googleapis.com/css2?family=Yuji+Syuku&display=swap&text=テーマ『起きよ！輝け』イザヤ60:1",
  },
];
---

<Layout
  title="2025 第56回JBBF全国青年フェローシップキャンプ"
  favicon={logo.src}
  linkTags={linkTags}
>
  <header class="block">
    <h1 class="header-head">
      <small>2025 第56回</small><br />
      JBBF全国青年フェローシップキャンプ
    </h1>
  </header>

  <main class="main">
    <section class="block theme">
      <div>
        <h2 class="theme-head">テーマ</h2>
        <p class="theme-text">『起きよ！輝け！』</p>
        <div class="theme-verse">イザヤ 60:1</div>
      </div>
    </section>

    <section class="image">
      <Image src={lakeYamanaka} alt="" />
    </section>

    <section class="box">
      <dl class="info-dl">
        <dt class="info-dt">
          <Icon name="mdi:calendar-month-outline" />
          Date
        </dt>

        <dd class="info-dd">2025.05.05 - 2025.05.07</dd>

        <dt class="info-dt">
          <Icon name="mdi:location-on-outline" />
          Location
        </dt>

        <dd class="info-dd">
          グリーンヒルズニューみなみ<br />
          GREEN HILL'S NEW MINAMI
        </dd>
        <dd class="info-dd">
          <small>〒401-0502</small><br />
          山梨県南都留郡山中湖村平野520-45
        </dd>
      </dl>
    </section>

    <section>
      <ul class="link-list">
        <li class="link-item">
          <BlockLink href="#" ja="プロモーション映像" en="Introduction Clip" />
        </li>
        <li class="link-item">
          <BlockLink href="#" ja="講師メッセージ" en="Speaker Message" />
        </li>
        <li class="link-item">
          <BlockLink href="#" ja="施設紹介" en="Venue Information" />
        </li>
      </ul>
    </section>
  </main>

  <footer class="footer">
    <small>
      主催：仁戸名聖書バプテスト教会・幕張聖書バプテスト教会<br />
      協力：市原聖書バプテスト教会
    </small>
  </footer>
</Layout>

<style>
  body {
    background: black;
    transition: background-color 1s;
  }

  body.light {
    background: white;
    transition: background-color 2s linear;
  }

  .block {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
  }

  .box {
    align-items: center;
    display: flex;
    justify-content: center;
  }

  .header-head {
    color: gray;
    font-size: 2vw;
    margin: 0;
  }

  .footer {
    font-size: 90%;
    padding: 25vh 1em 10vh;
    text-align: center;
  }

  .theme {
    color: black;
    font-family: "Yuji Syuku", serif;
    font-size: 3vw;
    min-height: 50vh;
    padding: 0 0 40vh;
    text-shadow: 0 0 40px white;
  }

  .theme-head {
    font-size: 50%;
    font-weight: normal;
    margin: 0;
  }

  .theme-text {
    margin: 8px 0;
  }

  .theme-verse {
    font-size: 50%;
    text-align: right;
  }

  .image {
    animation: filter-change 12s infinite;
  }

  .info-dl {
    margin: 10vh 0;
  }

  .info-dt {
    align-items: center;
    color: var(--color-primary);
    display: flex;
    font-size: 1.25em;
    font-weight: normal;
    gap: 0.2em;
    margin: 2em 0 0;
  }

  .info-dt [data-icon] {
    height: 1.2em;
    width: 1.2em;
  }

  .info-dd {
    margin: 0.5em 0;
  }

  .link-list {
    list-style: none;
    margin: auto;
    padding: 1.5em;
    max-width: 400px;
  }

  .link-item {
    color: var(--color-primary);
    margin: 1em 0;
  }

  .link-item:nth-child(n + 3) {
    color: var(--color-accent);
  }

  @keyframes filter-change {
    0% {
      filter: none;
    }
    25% {
      filter: brightness(125%);
    }
    50% {
      filter: none;
    }
    75% {
      filter: sepia(25%);
    }
    100% {
      filter: none;
    }
  }

  @media (max-width: 768px) {
    .header-head {
      font-size: 18px;
    }

    .theme {
      font-size: 32px;
    }

    .image {
      height: 50vh;
    }
  }
</style>

<script>
  const scrollTarget = document.querySelector(".main");
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && entry.target instanceof HTMLElement) {
          document.body.classList.add("light");
        } else {
          document.body.classList.remove("light");
        }
      });
    },
    { rootMargin: "0px 0px -50%" }
  );

  if (scrollTarget) {
    observer.observe(scrollTarget);
  }
</script>

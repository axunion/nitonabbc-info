---
import Layout from "@/layouts/Layout.astro";
import lakeYamanaka from "./img/lake-yamanaka.webp";

const head = `
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Yuji+Syuku&display=swap&text=テーマ起きよ！輝けイザヤ60:1" rel="stylesheet">
`;

const backgroundImage = `background-image: url(${lakeYamanaka.src})`;
---

<Layout title="2025 第56回JBBF全国青年フェローシップキャンプ" head={head}>
  <header class="block header">
    <h1 class="h1">
      <small>2025 第56回</small><br />
      JBBF全国青年フェローシップキャンプ
    </h1>
  </header>

  <main class="main">
    <div class="block theme">
      <section>
        <h2 class="theme-head">テーマ</h2>
        <p class="theme-text">起きよ！輝け！</p>
        <div class="theme-verse">イザヤ 60:1</div>
      </section>
    </div>

    <div class="block info" style={backgroundImage}>
      <section class="info-section">
        <h2 class="info-head">
          <svg
            class="svg"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            ><path
              d="M9 1V3H15V1H17V3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3H7V1H9ZM20 11H4V19H20V11ZM7 5H4V9H20V5H17V7H15V5H9V7H7V5Z"
            ></path></svg
          >
          Date
        </h2>
        <p class="info-text">2025.05.05 - 2025.05.07</p>
      </section>

      <section class="info-section">
        <h2 class="info-head">
          <svg
            class="svg"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            ><path
              d="M12 20.8995L16.9497 15.9497C19.6834 13.2161 19.6834 8.78392 16.9497 6.05025C14.2161 3.31658 9.78392 3.31658 7.05025 6.05025C4.31658 8.78392 4.31658 13.2161 7.05025 15.9497L12 20.8995ZM12 23.7279L5.63604 17.364C2.12132 13.8492 2.12132 8.15076 5.63604 4.63604C9.15076 1.12132 14.8492 1.12132 18.364 4.63604C21.8787 8.15076 21.8787 13.8492 18.364 17.364L12 23.7279ZM12 13C13.1046 13 14 12.1046 14 11C14 9.89543 13.1046 9 12 9C10.8954 9 10 9.89543 10 11C10 12.1046 10.8954 13 12 13ZM12 15C9.79086 15 8 13.2091 8 11C8 8.79086 9.79086 7 12 7C14.2091 7 16 8.79086 16 11C16 13.2091 14.2091 15 12 15Z"
            ></path></svg
          >
          Location
        </h2>
        <p class="info-text">
          グリーンヒルズニューみなみ<br />
          GREEN HILL'S NEW MINAMI
        </p>
        <p class="info-subtext">
          <small>〒401-0502</small><br />
          山梨県南都留郡山中湖村平野520-45
        </p>
      </section>
    </div>
  </main>

  <footer class="footer">
    <small class="footer-text">
      主催：仁戸名聖書バプテスト教会・幕張聖書バプテスト教会<br />
      協力：市原聖書バプテスト教会
    </small>
  </footer>
</Layout>

<style>
  body {
    background: black;
    transition: background-color 1s;
  }

  body.light {
    background: white;
    transition: background-color 2s linear;
  }

  .main {
    font-size: 2vw;
  }

  .svg {
    fill: currentColor;
    height: 1em;
    vertical-align: -0.15em;
    width: 1em;
  }

  .h1 {
    color: gray;
    font-size: 2vw;
    margin: 0;
  }

  .theme {
    color: black;
    font-family: "Yuji Syuku", serif;
    font-size: 3vw;
    min-height: 50vh;
    padding: 0 0 40vh;
    text-shadow: 0 0 40px white;
  }

  .theme-head {
    font-size: 50%;
    font-weight: normal;
    margin: 0;
  }

  .theme-text {
    margin: 8px 0;
  }

  .theme-text::before {
    content: "『";
    margin: 0 4px 0 0;
  }

  .theme-text::after {
    content: "』";
    margin: 0 0 0 4px;
  }

  .theme-verse {
    font-size: 50%;
    text-align: right;
  }

  .info {
    background: center / cover;
    color: white;
  }

  .info-section {
    backdrop-filter: blur(10px);
    background: #00000020;
    margin: auto auto auto 0;
    padding: 2em;
  }

  .info-section + .info-section {
    margin: auto 0 auto auto;
  }

  .info-head {
    font-size: 100%;
    font-weight: normal;
    margin: 0;
  }

  .info-text {
    font-size: 120%;
    margin: 0.25em 0;
  }

  .info-subtext {
    font-size: 85%;
    margin: 0;
  }

  .footer {
    padding: 25vh 1em 10vh;
    text-align: center;
  }

  .footer-text {
    font-size: 12px;
  }

  @media (max-width: 768px) {
    .main {
      font-size: 16px;
    }

    .h1 {
      font-size: 18px;
    }

    .theme {
      font-size: 32px;
    }
  }
</style>

<script>
  const scrollTarget = document.querySelector(".main");
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && entry.target instanceof HTMLElement) {
          document.body.classList.add("light");
        } else {
          document.body.classList.remove("light");
        }
      });
    },
    { rootMargin: "0px 0px -50%" }
  );

  if (scrollTarget) {
    observer.observe(scrollTarget);
  }
</script>

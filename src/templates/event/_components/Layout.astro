---
/**
 * Event-specific layout component
 *
 * This layout imports event-specific CSS variables and provides
 * common HTML meta tags and security headers.
 *
 * Usage:
 * ```astro
 * ---
 * import Layout from "./_components/Layout.astro";
 * ---
 * <Layout title="Event Title">
 *   <main>Content</main>
 * </Layout>
 * ```
 */
import "../_styles/variables.css";

type LinkTag = {
  rel: string;
  href: string;
  type?: string;
  sizes?: string;
  crossorigin?: string;
};

type Props = {
  title: string;
  favicon?: string;
  linkTags?: LinkTag[];
};

const { title, favicon, linkTags } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Security headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <link rel="icon" type="image/svg+xml" href={favicon || "/favicon.ico"} />
    <title>{title}</title>

    {linkTags && linkTags.map((linkTag) => <link {...linkTag} />)}
  </head>
  <body>
    <slot />
  </body>
</html>

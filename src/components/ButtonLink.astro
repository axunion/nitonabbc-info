---
type Props = {
  href: string;
  target?: string;
};

const { href, target } = Astro.props;
---

<a class="a" href={href} target={target ?? ""} rel="noopener noreferrer">
  <slot />
</a>

<style>
  .a {
    background: var(--color-primary, #3b82f6);
    border-radius: 0.5em;
    color: var(--color-background, #f8fafc);
    display: block;
    margin: 1em 0;
    padding: 1em;
    text-align: center;
  }
</style>

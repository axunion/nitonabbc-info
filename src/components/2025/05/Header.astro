---
import { Icon } from "astro-icon/components";
import Button from "@/components/shared/Button.astro";
---

<header class="header">
  <h1 class="h1">
    <small>2025 第56回</small><br />
    JBBF全国青年フェローシップキャンプ
  </h1>

  <Button>
    <Icon name="mdi:menu" />
  </Button>
</header>

<style>
  .header {
    align-items: center;
    display: flex;
    gap: 0.5em;
    justify-content: space-between;
    padding: 1em 0.5em 1em 1.5em;
  }

  .h1 {
    font-size: 1em;
    font-weight: normal;
    line-height: 1.2;
    margin: 0;
  }

  .header [data-icon] {
    height: 1.5em;
    padding: 0.5em;
    width: 1.5em;
  }
</style>

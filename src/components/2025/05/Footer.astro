---
import { Icon } from "astro-icon/components";
---

<footer class="footer">
  <a class="a" href="#">
    <Icon name="mdi:arrow-back-circle" />
    <span class="text">Back</span>
  </a>
</footer>

<style>
  .footer {
    display: flex;
    margin: 80px 0 20px;
    padding: 1em 0.5em;
  }

  .a {
    align-items: center;
    cursor: pointer;
    display: flex;
    gap: 0.5em;
    padding: 0.5em;
  }

  .a [data-icon] {
    font-size: 200%;
  }

  .text {
    font-size: 125%;
  }
</style>

<script>
  const a = document.querySelector(".a") as HTMLAnchorElement;

  a.addEventListener("click", (e) => {
    e.preventDefault();
    history.back();
  });
</script>

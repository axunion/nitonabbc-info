---
import { Icon } from "astro-icon/components";

type Props = {
  href?: string;
};

const { href = "/2025/05/" } = Astro.props;
---

<footer class="footer">
  <a class="a" href={href}>
    <Icon name="mdi:arrow-back-circle" />
    <span class="text">Back</span>
  </a>
</footer>

<style>
  .footer {
    display: flex;
    margin: 80px 0 0;
    padding: 0 0.5em 40px;
  }

  .a {
    align-items: center;
    cursor: pointer;
    display: flex;
    gap: 0.5em;
    padding: 0.5em;
  }

  .a [data-icon] {
    font-size: 200%;
  }

  .text {
    font-size: 125%;
  }
</style>

---
type Props = {
  caption?: string;
  rows: { th: string; td: string }[];
};

const { caption, rows } = Astro.props;
---

<table class="table">
  {caption && <caption class="caption">{caption}</caption>}
  {
    rows.map(({ th, td }) => (
      <tr>
        <th class="th">{th}</th>
        <td class="td">{td}</td>
      </tr>
    ))
  }
</table>

<style>
  .table {
    border-collapse: collapse;
    margin: 20px auto;
    table-layout: fixed;
    width: 100%;
  }

  .caption {
    font-weight: bold;
    margin: 0 0 0.5em;
  }

  .th {
    font-family: "Courier New", monospace;
    padding: 0.25em 0.5em;
    text-align: right;
    width: 40%;
  }

  .td {
    letter-spacing: 0.1em;
    padding: 0.25em;
  }
</style>

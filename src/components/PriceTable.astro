---
interface Props {
  rows: { label: string; price: string }[];
}

const { rows } = Astro.props;
---

<table class="table">
  {
    rows.map((row) => (
      <tr>
        <th class="th">{row.label}</th>
        <td class="td">&yen{row.price}</td>
      </tr>
    ))
  }
</table>

<style>
  .table {
    border-collapse: collapse;
    margin: auto;
  }

  .th {
    font-weight: normal;
    padding: 0.25em 0;
    text-align: left;
  }

  .td {
    padding: 0 1em 0 2em;
    text-align: right;
  }
</style>

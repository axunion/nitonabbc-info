---
type Props = {
  list: { q: string; a: string }[];
};

const { list } = Astro.props;
---

<dl class="dl">
  {
    list.map(({ q, a }) => (
      <>
        <dt class="dt">{q}</dt>
        <dd class="dd">{a}</dd>
      </>
    ))
  }
</dl>

<style>
  .dl {
    margin: 1em 0;
  }

  .dt {
    font-weight: bold;
  }

  .dd {
    background: #ffffff20;
    border-radius: 4px;
    font-size: 90%;
    margin: 0.5rem 0 1.5rem;
    padding: 0.5em 0.75em;
  }
</style>
